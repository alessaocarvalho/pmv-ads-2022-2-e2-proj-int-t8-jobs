@model UserViewModel
@{
    ViewData["Title"] = "Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-image: linear-gradient(to left, #722f37, #F7B4A7);
    }
</style>

<body>
    <div class="container py-5">

        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4" style="border-radius: 15px">
                    <div class="card-body text-center">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                             class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3" style="color: #2B4B82">@Html.DisplayFor(user => user.FirstName)</h5>
                        <p class="text-muted mb-4">@Html.DisplayFor(user => user.UserBio)</p>
                        <div class="d-flex justify-content-center mb-2">
                            <a type="button" class="btn btn-primary" asp-area="" asp-controller="User" asp-action="ProfileUpdate">Editar</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-4" style="border-radius: 15px">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Nome Completo</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(user => user.FirstName) @Html.DisplayFor(user => user.LastName)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(user => user.Email)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Telefone</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">(@Html.DisplayFor(user => user.AreaCode)) @Html.DisplayFor(user => user.Phone)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Endereço</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(user => user.AddressLine)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">CEP</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(user => user.ZipCode)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Cidade</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(user => user.City)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Estado</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(user => user.Estate)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>